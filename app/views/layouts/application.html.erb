<!DOCTYPE html>
<html>
  <head>
    <title>ENTR451: User Security</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <p>
    <!-- if logged in, display name -->
    <% if @current_user %>
      <h3>Hey, <%= @current_user["first_name"] %> </h3>
    <!-- ELSE -->
    <% else %>
      <a href="/sessions/new">Login</a>|<a href="/users/new">Sign Up</a>
    <% end %>
    </p>
    <p>
      <%= flash["notice"] %>
    </p>

    <%= yield %>
  </body>
</html>
